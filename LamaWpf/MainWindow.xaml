<Window x:Class="LamaWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LaMa Inpainter" Width="1200" Height="720" Background="#1E1E1E">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
            <Button x:Name="BtnPickModel" Content="Model..." Width="90" Margin="0,0,8,0" Click="BtnPickModel_Click"/>
            <TextBlock x:Name="TxtModel" Foreground="#DADADA" VerticalAlignment="Center" Text="(no model)"/>
            <Separator Width="24" Opacity="0"/>
            <Button x:Name="BtnOpenImage" Content="Open Image..." Width="120" Margin="0,0,8,0" Click="BtnOpenImage_Click"/>
            <Button x:Name="BtnRun" Content="Run" Width="80" Margin="0,0,8,0" Click="BtnRun_Click" IsEnabled="False"/>
            <ProgressBar x:Name="PbarLoading" 
                 Width="100" Height="15" 
                 Margin="10,0,0,0" 
                 IsIndeterminate="True" 
                 Visibility="Collapsed" 
                 VerticalAlignment="Center"/>
            <TextBlock x:Name="TxtStatus" Foreground="#9CDCFE" VerticalAlignment="Center" Margin="16,0,0,0" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" MaxWidth="600"/>
        </DockPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="#111" CornerRadius="8" Padding="10">
                <Grid>
                    <Image x:Name="ImgInput" Stretch="Uniform"/>
                    <Canvas x:Name="Overlay" Background="Transparent"
                            MouseLeftButtonDown="Overlay_MouseLeftButtonDown"
                            MouseMove="Overlay_MouseMove"
                            MouseLeftButtonUp="Overlay_MouseLeftButtonUp"/>
                </Grid>
            </Border>
            <Border Grid.Column="2" Background="#111" CornerRadius="8" Padding="10">
                <Image x:Name="ImgOutput" Stretch="Uniform"/>
            </Border>
        </Grid>
        <TextBlock Grid.Row="2" Foreground="#888" Margin="0,10,0,0" Text="Mask rule: Draw rectangle on left image."/>
    </Grid>
</Window>