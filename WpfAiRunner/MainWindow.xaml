<Window x:Class="WpfAiRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WpfAiRunner" Width="1400" Height="800" Background="#1E1E1E">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="15,0">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#37373D"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2D2E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <TextBlock Text="MODELS" Foreground="#666" FontWeight="Bold" Margin="10,10,0,10"/>

                <RadioButton Content="🏠 Home" Style="{StaticResource MenuButtonStyle}" 
                             IsChecked="True" Click="Menu_Click" Tag="Home"/>

                <RadioButton Content="🖌️ LaMa Inpainting" Style="{StaticResource MenuButtonStyle}" 
                             Click="Menu_Click" Tag="Lama"/>

                <RadioButton Content="📏 Depth Anything" Style="{StaticResource MenuButtonStyle}" 
                             Click="Menu_Click" Tag="Depth"/>

                <RadioButton Content="✂️ Segment Anything (SAM)" Style="{StaticResource MenuButtonStyle}" 
                             Click="Menu_Click" Tag="Sam"/>

                <RadioButton Content="🔍 Real-ESRGAN (x4)" Style="{StaticResource MenuButtonStyle}" 
                             Click="Menu_Click" Tag="Esrgan"/>

                <RadioButton Content="🎨 Stable Diffusion (Coming Soon)" Style="{StaticResource MenuButtonStyle}" 
                             IsEnabled="False" Opacity="0.5"/>
            </StackPanel>
        </Border>

        <ContentControl x:Name="MainContent" Grid.Column="1"/>
    </Grid>
</Window>