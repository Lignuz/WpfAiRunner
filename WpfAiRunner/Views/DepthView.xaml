<UserControl x:Class="WpfAiRunner.Views.DepthView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1E1E1E" Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="Background" Value="#242424"/>
            <Setter Property="Foreground" Value="#E6E6E6"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#161616" CornerRadius="10" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnPickModel" Content="Load Depth Model..." Click="BtnPickModel_Click"/>
                <TextBlock x:Name="TxtModel" Foreground="#AAA" VerticalAlignment="Center" Margin="5,0,15,0" Text="(no model)"/>

                <CheckBox x:Name="ChkUseGpu" Content="Use GPU" Foreground="#DDD" 
                          VerticalAlignment="Center" Margin="0,0,15,0"
                          Click="ChkUseGpu_Click"/>

                <Button x:Name="BtnOpenImage" Content="Open Image" Click="BtnOpenImage_Click"/>

                <TextBlock Text="Style:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#CCC"/>
                <ComboBox x:Name="CboStyle" Width="100" SelectedIndex="0" VerticalAlignment="Center" Margin="0,0,10,0" SelectionChanged="CboStyle_SelectionChanged">
                    <ComboBoxItem Content="Inferno"/>
                    <ComboBoxItem Content="Magma"/>
                    <ComboBoxItem Content="Plasma"/>
                    <ComboBoxItem Content="Viridis"/>
                    <ComboBoxItem Content="Grayscale"/>
                </ComboBox>
                
                <Button x:Name="BtnRun" Content="Estimate Depth" Click="BtnRun_Click" IsEnabled="False"/>

                <TextBlock x:Name="TxtStatus" Foreground="#9CDCFE" VerticalAlignment="Center" Margin="15,0,0,0" Text="Ready."/>

                <ProgressBar x:Name="PbarLoading" Width="100" Height="10" IsIndeterminate="True" Visibility="Collapsed" Margin="10,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#111" CornerRadius="8">
                <Image x:Name="ImgInput" Stretch="Uniform"/>
            </Border>

            <Border Grid.Column="2" Background="#111" CornerRadius="8">
                <Image x:Name="ImgOutput" Stretch="Uniform"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>