<local:BaseAiView x:Class="WpfAiRunner.Views.FaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfAiRunner.Views"
             Background="{StaticResource BgDark}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource BgCard}" CornerRadius="8" Padding="10" Margin="0,0,0,10">
            <DockPanel>
                <StackPanel Orientation="Horizontal">

                    <TextBlock Text="Model:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="{StaticResource TextSecondary}"/>
                    <ComboBox x:Name="CboModelSelect" Width="140" Margin="0,0,10,0" 
                              SelectionChanged="CboModelSelect_SelectionChanged" SelectedIndex="0">
                        <ComboBoxItem Content="⚡ RFB-320 (Fast)"/>
                        <ComboBoxItem Content="🧠 YOLOv8 (Robust)"/>
                        <ComboBoxItem Content="🚀 YOLOv11 (New SOTA)"/>
                    </ComboBox>

                    <CheckBox x:Name="ChkUseGpu" Content="Use GPU" Click="ChkUseGpu_Click"/>

                    <Button x:Name="BtnOpenImage" Content="🖼️ Open Image" IsEnabled="False" Click="BtnOpenImage_Click"/>

                    <CheckBox x:Name="ChkBlur" Content="Blur" IsChecked="True" 
                              Margin="10,0,5,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"
                              Click="ChkOption_Click"/>

                    <CheckBox x:Name="ChkBox" Content="Box" IsChecked="True" 
                              Margin="5,0,15,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"
                              Click="ChkOption_Click"/>

                    <Button x:Name="BtnRun" Content="▶ Run" Style="{StaticResource BtnPrimary}" 
                            IsEnabled="False" Click="BtnRun_Click" Width="80"/>

                    <Button x:Name="BtnSave" Content="💾 Save" IsEnabled="False" Click="BtnSave_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <ProgressBar x:Name="PbarLoading" Width="100" Height="4" IsIndeterminate="True" Visibility="Collapsed" Margin="0,0,10,0"/>
                    <TextBlock x:Name="TxtStatus" Text="Ready" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardBorder}">
                <Image x:Name="ImgInput" Stretch="Uniform"/>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource CardBorder}">
                <Image x:Name="ImgOutput" Stretch="Uniform"/>
            </Border>
        </Grid>
    </Grid>
</local:BaseAiView>