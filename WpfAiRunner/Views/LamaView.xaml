<local:BaseAiView x:Class="WpfAiRunner.Views.LamaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAiRunner.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="{StaticResource BgDark}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource BgCard}" CornerRadius="8" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnPickModel" Content="📂 Model..." Click="BtnPickModel_Click"/>
                    <TextBlock x:Name="TxtModel" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="5,0,15,0" Text="(no model)"/>

                    <!-- DirectML does not support some operations used in LaMa, so disable GPU option -->
                    <CheckBox x:Name="ChkUseGpu" Content="Use GPU" ToolTip="Check to use CUDA acceleration" Click="ChkUseGpu_Click" IsEnabled="False" Visibility="Collapsed"/>

                    <Button x:Name="BtnOpenImage" Content="🖼️ Open Image..." Click="BtnOpenImage_Click"/>

                    <Button x:Name="BtnUseOutput" Content="⬅️ Use Output" Click="BtnUseOutput_Click" IsEnabled="False" Margin="5,0,0,0"/>

                    <Button x:Name="BtnRun" Content="▶ Run" Style="{StaticResource BtnPrimary}" Click="BtnRun_Click" IsEnabled="False" Width="80" Margin="10,0,0,0"/>

                    <Button x:Name="BtnClearMask" Content="Clear Mask" Click="BtnClearMask_Click" IsEnabled="False"/>

                    <Border Background="{StaticResource BgInput}" CornerRadius="6" Padding="10,4" Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="0,0,10,0" Text="Mask Tool:"/>
                            <RadioButton x:Name="rbRect" Content="Rect" GroupName="MaskMode" Margin="0,0,10,0"/>
                            <RadioButton x:Name="rbBrush" Content="Brush" GroupName="MaskMode" Margin="0,0,15,0"/>

                            <TextBlock x:Name="TxtBrushSizeLabel" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="0,0,6,0" Text="Size"/>
                            <Slider x:Name="SlBrushSize" Width="100" Minimum="4" Maximum="128" Value="24" TickFrequency="4"
                                    IsSnapToTickEnabled="False" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox x:Name="TxtBrushSize" Width="40" TextAlignment="Center" Text="24"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,10,0">
                    <ProgressBar x:Name="PbarLoading" Width="100" Height="4" IsIndeterminate="True" Visibility="Collapsed" Margin="0,0,12,0"/>
                    <TextBlock x:Name="TxtStatus" Foreground="{StaticResource AccentColor}" VerticalAlignment="Center" Text="Ready."/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="10,10,10,5">
                        <TextBlock Foreground="{StaticResource TextPrimary}" FontSize="14" FontWeight="SemiBold" Text="Input / Mask"/>
                        <TextBlock Foreground="{StaticResource TextSecondary}" Margin="10,2,0,0" Text="(draw rect or paint brush)"/>
                    </DockPanel>

                    <Grid Grid.Row="1">
                        <Image x:Name="ImgInput" Stretch="Uniform" SnapsToDevicePixels="True"/>
                        <Image x:Name="ImgMaskPreview" Stretch="Uniform" Opacity="0.45" IsHitTestVisible="False"/>

                        <Canvas x:Name="Overlay" Background="Transparent"
                                MouseEnter="Overlay_MouseEnter"
                                MouseLeave="Overlay_MouseLeave"
                                MouseLeftButtonDown="Overlay_MouseLeftButtonDown"
                                MouseMove="Overlay_MouseMove"
                                MouseLeftButtonUp="Overlay_MouseLeftButtonUp">
                            <Ellipse x:Name="BrushCursor" Stroke="#FFD200" StrokeThickness="2"
                                     Fill="Transparent" Visibility="Collapsed" IsHitTestVisible="False"/>
                        </Canvas>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Foreground="{StaticResource TextPrimary}" FontSize="14" FontWeight="SemiBold" Text="Output" Margin="10,10,0,5"/>
                    <Image Grid.Row="1" x:Name="ImgOutput" Stretch="Uniform" SnapsToDevicePixels="True"/>
                </Grid>
            </Border>
        </Grid>

        <TextBlock Grid.Row="2" Foreground="{StaticResource TextSecondary}" Margin="0,10,0,0"
                   Text="Tip: Brush size is shown as a yellow circle under the mouse while hovering the input image."/>
    </Grid>
</local:BaseAiView>