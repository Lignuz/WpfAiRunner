<UserControl x:Class="WpfAiRunner.Views.LamaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="#1E1E1E"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="Background" Value="#242424"/>
            <Setter Property="Foreground" Value="#E6E6E6"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Foreground" Value="#DADADA"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="26"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#161616" CornerRadius="10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnPickModel" Content="Model..." Width="86" Click="BtnPickModel_Click"/>
                    <TextBlock x:Name="TxtModel" Foreground="#DADADA" VerticalAlignment="Center" Text="(no model)"/>

                    <Separator Width="18" Opacity="0"/>

                    <CheckBox x:Name="ChkUseGpu" Content="Use GPU" Foreground="#DADADA" VerticalAlignment="Center" Margin="0,0,14,0" ToolTip="Check to use CUDA acceleration" Click="ChkUseGpu_Click"/>

                    <Button x:Name="BtnOpenImage" Content="Open Image..." Width="120" Click="BtnOpenImage_Click"/>
                    <Button x:Name="BtnRun" Content="Run" Width="86" Click="BtnRun_Click" IsEnabled="False"/>
                    <Button x:Name="BtnClearMask" Content="Clear Mask" Width="104" Margin="0,0,10,0" Click="BtnClearMask_Click" IsEnabled="False"/>

                    <Border Background="#202020" CornerRadius="8" Padding="10,8" Margin="0,0,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Foreground="#DADADA" VerticalAlignment="Center" Margin="0,0,10,0" Text="Mask"/>
                            <RadioButton x:Name="rbRect" Content="Rect" GroupName="MaskMode"/>
                            <RadioButton x:Name="rbBrush" Content="Brush" GroupName="MaskMode" Margin="0,0,14,0"/>

                            <TextBlock x:Name="TxtBrushSizeLabel" Foreground="#DADADA" VerticalAlignment="Center" Margin="0,0,6,0" Text="Size"/>
                            <Slider x:Name="SlBrushSize" Width="150" Minimum="4" Maximum="128" Value="24" TickFrequency="4"
                                    IsSnapToTickEnabled="False" Margin="0,0,8,0"/>
                            <TextBox x:Name="TxtBrushSize" Width="52"
                                     Background="#111" Foreground="#DADADA" BorderBrush="#333" Text="24"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,10,0">
                    <ProgressBar x:Name="PbarLoading" Width="160" Height="10"
                                 IsIndeterminate="True" Visibility="Collapsed" Margin="0,0,12,0"/>
                    <TextBlock x:Name="TxtStatus" Foreground="#9CDCFE" VerticalAlignment="Center" Text="Ready."/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#111" CornerRadius="10" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="0,0,0,8">
                        <TextBlock Foreground="#DADADA" FontSize="14" FontWeight="SemiBold" Text="Input / Mask"/>
                        <TextBlock Foreground="#777" Margin="10,2,0,0" Text="(draw rect or paint brush)"/>
                    </DockPanel>

                    <Grid Grid.Row="1">
                        <Image x:Name="ImgInput" Stretch="Uniform" SnapsToDevicePixels="True"/>
                        <Image x:Name="ImgMaskPreview" Stretch="Uniform" Opacity="0.45" IsHitTestVisible="False"/>

                        <Canvas x:Name="Overlay" Background="Transparent"
                                MouseEnter="Overlay_MouseEnter"
                                MouseLeave="Overlay_MouseLeave"
                                MouseLeftButtonDown="Overlay_MouseLeftButtonDown"
                                MouseMove="Overlay_MouseMove"
                                MouseLeftButtonUp="Overlay_MouseLeftButtonUp">
                            <Ellipse x:Name="BrushCursor" Stroke="#FFD200" StrokeThickness="2"
                                     Fill="Transparent" Visibility="Collapsed" IsHitTestVisible="False"/>
                        </Canvas>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Column="2" Background="#111" CornerRadius="10" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Foreground="#DADADA" FontSize="14" FontWeight="SemiBold" Text="Output" Margin="0,0,0,8"/>
                    <Image Grid.Row="1" x:Name="ImgOutput" Stretch="Uniform" SnapsToDevicePixels="True"/>
                </Grid>
            </Border>
        </Grid>

        <TextBlock Grid.Row="2" Foreground="#888" Margin="0,10,0,0"
                   Text="Tip: Brush size is shown as a yellow circle under the mouse while hovering the input image."/>
    </Grid>
</UserControl>