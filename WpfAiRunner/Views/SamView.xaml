<UserControl x:Class="WpfAiRunner.Views.SamView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="Background" Value="#242424"/>
            <Setter Property="Foreground" Value="#E6E6E6"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <DockPanel Grid.Row="0" Margin="8">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="BtnLoadModels" Content="1. Load Models..." Width="140" Margin="0,0,8,0"
                        Click="BtnLoadModels_Click"/>
                <CheckBox x:Name="ChkUseGpu" Content="Use GPU" VerticalAlignment="Center" Foreground="#DDD" Margin="0,0,12,0"/>
                <Button x:Name="BtnOpenImage" Content="2. Open Image" Width="140" Margin="0,0,8,0"
                        IsEnabled="False" Click="BtnOpenImage_Click"/>
                <Button x:Name="BtnReset" Content="Clear Mask" Width="120" Margin="0,0,8,0"
                        IsEnabled="False" Click="BtnReset_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                <ProgressBar x:Name="PbarLoading" Width="140" Height="14" Margin="0,0,8,0"
                             Visibility="Collapsed" IsIndeterminate="True"/>
                <TextBlock x:Name="TxtStatus" VerticalAlignment="Center" Foreground="#8FD3FF"/>
            </StackPanel>
        </DockPanel>

        <!-- Viewer -->
        <Grid Grid.Row="1" Margin="8">
            <Border Background="#111" CornerRadius="8" Padding="8">
                <Grid>
                    <!-- 같은 영역에 완전히 겹쳐서 그리기 -->
                    <Grid x:Name="InputLayer">
                        <Image x:Name="ImgInput"
                               Stretch="Uniform"
                               SnapsToDevicePixels="True"
                               MouseLeftButtonDown="ImgInput_MouseLeftButtonDown"
                               SizeChanged="ImgInput_SizeChanged"/>

                        <Image x:Name="ImgMask"
                               Stretch="Uniform"
                               Opacity="0.45"
                               IsHitTestVisible="False"
                               SnapsToDevicePixels="True"/>

                        <Canvas x:Name="PointOverlay"
                                IsHitTestVisible="False"
                                SnapsToDevicePixels="True"/>

                        <TextBlock x:Name="TxtOverlay"
                                   Text="Open image and click."
                                   Foreground="#B0B0B0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
