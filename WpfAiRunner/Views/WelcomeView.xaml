<UserControl x:Class="WpfAiRunner.Views.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource BgDark}">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="WpfAiRunner" FontSize="48" FontWeight="Bold" 
                       Foreground="{StaticResource TextPrimary}" 
                       HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock Text="High-Performance Local AI Model Runner" 
                       FontSize="18" Foreground="{StaticResource AccentColor}" 
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <Border Background="{StaticResource BgCard}" CornerRadius="10" Padding="30" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Select a model from the left menu:" 
                               FontSize="16" Foreground="{StaticResource TextSecondary}" 
                               HorizontalAlignment="Center" Margin="0,0,0,15"/>

                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="• LaMa Inpainting (Object Removal)" Foreground="{StaticResource TextPrimary}" Margin="0,4"/>
                        <TextBlock Text="• Depth Anything V2 (Depth Map)" Foreground="{StaticResource TextPrimary}" Margin="0,4"/>
                        <TextBlock Text="• Segment Anything (MobileSAM / SAM 2)" Foreground="{StaticResource TextPrimary}" Margin="0,4"/>
                        <TextBlock Text="• Real-ESRGAN (x4 Super Resolution)" Foreground="{StaticResource TextPrimary}" Margin="0,4"/>
                        <TextBlock Text="• RMBG-1.4 (Background Removal)" Foreground="{StaticResource TextPrimary}" Margin="0,4"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <TextBlock Text="Powered by ONNX Runtime &amp; CUDA" 
                       FontSize="12" Foreground="#666" 
                       HorizontalAlignment="Center" Margin="0,40,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>